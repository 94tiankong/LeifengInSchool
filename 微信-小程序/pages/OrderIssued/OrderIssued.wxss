
.picker{
  padding:20rpx 0rpx;
}

.buttonview{
  text-align: center;
  margin:0 auto;
}

.Button{
  width:80%;
  background: linear-gradient(to right, #4D6FFB , #5CAFFF)
}
.buttontext{
  color: #FFFFFF;
}

.fb-body{
  width: 100%;
  background: #fff;
  height: 230rpx;
  border-bottom:1px solid #ccc;
  margin-top: 20rpx;
}

.fb-body .content{
  width: 100%;
  height: 100%;
  color: #333;
  line-height: 40rpx;
  font-size: 28rpx;
}

.fb-body .text-count{
  padding-top: 17rpx;
  line-height: 30rpx;
  float: right;
  color: #666;
  font-size: 24rpx;
}


.top{
 width: 100%;
 height: 80rpx;
 padding: 0 20rpx;
 line-height: 80rpx;
 font-size: 34rpx;
 position: relative;
}
.top-text{
 float: left
}
/* 下拉框 */
.top-selected{
  width: 50%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  
  padding: 0 10rpx 0 30rpx;
  font-size: 30rpx;
}
/* 下拉内容 */
.select_box {
  background-color: #fff;
  width: 100%;
  position: relative;
  right: 0;
  z-index: 66;
  overflow: hidden;
  text-align: left;
  animation: myfirst 0.5s;
  font-size: 30rpx;
  border: 1px solid #eee;
}
.select_one {
  padding-left: 30rpx;
  width: 100%;
  height: 60rpx;
  position: relative;
  line-height: 60rpx;
  border-bottom: 1px solid #eee;
}
/* 下拉过度效果 */
@keyframes myfirst {
  from {
    height: 0rpx;
  }
  
  to {
    height: 210rpx;
  }
}
/* 下拉图标 */
.top-selected image{
 height:50rpx;
 width:40rpx;
 position: absolute;
left: 417rpx;
 top: 15rpx;
}

/* 弹框 */
.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0,0,0,.2);
  z-index: 9000;
  opacity: 0.7;
}
 
.dialog-box {
  width: 580rpx;
  height: 465rpx;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  margin: -370rpx 85rpx;
  background-color: #fff;
  border-radius: 36rpx;
  display: flex;
  flex-direction: column;
}
 
.dialog-box image {
  width: 80rpx;
  height:80rpx;
  position: absolute;
  top:10rpx;
  right:10rpx;
}

.fb-type{
  background: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.fb-type .type-label{
  height: 36rpx;
   padding-right:50rpx;
  color: #333;
  font-size: 28rpx;
}

.fb-type .type-icon{
  height: 36rpx;
  width: 36rpx;
}
