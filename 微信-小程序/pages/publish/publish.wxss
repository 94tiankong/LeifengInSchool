/*模态框*/
.btn{
  z-index: 1002
}
.modals {
  position: fixed;
  z-index: 999;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}
.closeChoose{
  z-index: 1001;
  width:100%;
  display:flex;
  align-items:center;
  justify-content:center;
  margin-top: 150rpx;
}
.mask {
  position: absolute;
  z-index: 1000;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  opacity: 0
}
 
.content {
  position: absolute;
  z-index: 1001;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 50rpx;
  height: 300rpx;
  background-color: #fff;
}
 
/*动画前初始位置*/
 
.bottom-pos {
  -webkit-transform: translateY(100%);
  transform: translateY(100%);
}