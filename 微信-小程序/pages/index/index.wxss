.banner {
  width: 750rpx;
  height: 302rpx;
}

.banner image {
  width: 100%;
  height: 417rpx;
}
.m-menu {
  display: flex;
  height: 181rpx;
  width: 750rpx;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
  border-bottom:1px solid rgba(204, 204, 204, 0.267);
}
.m-menu .item {
  flex: 1;
  display: block;
}
.m-menu image {
  display: block;
  width: 66rpx;
  height: 66rpx;
  margin: 0 auto;
  margin-bottom: 12rpx;
}
.m-menu text {
  display: block;
  font-size: 24rpx;
  text-align: center;
  margin: 0 auto;
  line-height: 1;
  color: #333;
}


.l-menu{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
  align-items: flex-start;
  height: 260rpx;
  background-color: white;
  padding: 20rpx 15rpx ;
  border-bottom:5px solid rgba(204, 204, 204, 0.267);
}
.l-menu-item{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  margin: 10rpx 10rpx;
  width: 160rpx;
  height:90rpx;
}
.l-menu-text{
  color: rgba(136, 9, 9, 0.89);
  font-weight: bold;
  margin-top: 12rpx;
  font-size: 27rpx;
}
.posttitle{
  background-color: white;
  height: 70rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  padding: 5rpx 20rpx;
  border-bottom:1px solid rgba(204, 204, 204, 0.267);

}
.hotposttext{
font-weight:bold;
color: rgba(148, 9, 9, 0.836);
}
.allposttext{
  color: #666;
  margin-left: 210px;
  font-size: 9px
}
.list{
  padding: 20rpx 0rpx 0rpx 0rpx;  
  background-color: white
}

.list-item{
  display: flex;
  flex-direction: row;
  margin-bottom: 5px;
  padding: 0px 5px 5px 10px;
  border-bottom:1px solid rgba(204, 204, 204, 0.267);
}
.content{
  margin-top: 5px;
  color: #333;
  font-size: 28rpx;
}
.userinfo{
  margin: 15rpx 5rpx 0rpx 15rpx;
