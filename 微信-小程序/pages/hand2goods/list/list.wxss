  flex-direction: row;
  padding-bottom: 10px;
  align-items: center;
}
.nav{
  position: fixed;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  height: 30px;
  top: 0px;
  width: 100%;
  background-color: rgb(163, 39, 39);
}
.leftarrow{
  height: 15px;
  width: 20px;
}
.searchpart{
  margin: 2px 0px 2px 40px;
  display: flex;
  flex-direction: row;
}
.val{
  width: 210rpx;
  height: 40rpx;
  border:1rpx solid #cccccc;
  border-radius: 5rpx;
  font: 13rpx;
  background-color: white;
  line-height: 40rpx;
}
.holder{
  font-size: 13px;
  margin-left: 5px;
