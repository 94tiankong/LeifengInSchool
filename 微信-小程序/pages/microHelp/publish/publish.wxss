/* 下拉框 */
.top-selected{
  width: 50%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  
  padding: 0 10rpx 0 30rpx;
  font-size: 30rpx;
}
/* 下拉内容 */
.select_box {
  background-color: #fff;
  width: 100%;
  position: relative;
  right: 0;
  z-index: 66;
  overflow: hidden;
  text-align: left;
  animation: myfirst 0.5s;
  font-size: 30rpx;
  border: 1px solid #eee;
}
.select_one {
  padding-left: 30rpx;
  width: 100%;
  height: 60rpx;
  position: relative;
  line-height: 60rpx;
  border-bottom: 1px solid #eee;
}
/* 下拉过度效果 */
@keyframes myfirst {
  from {
    height: 0rpx;
  }
  
  to {
    height: 210rpx;
  }
}
